<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kc.fyp.ecare">
    <!-- PERMISSIONS -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Splash Activity -->
        <activity
            android:name=".activities.Splash"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Login Activity -->
        <activity
            android:name=".activities.Login"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <!-- Login via Email Activity -->
        <activity
            android:name=".activities.LoginViaEmail"
            android:parentActivityName=".activities.Login"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <!-- Registration Activity -->
        <activity
            android:name=".activities.Registration"
            android:parentActivityName=".activities.Login"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <!-- Forgot Password Activity -->
        <activity
            android:name=".activities.ForgotPassword"
            android:parentActivityName=".activities.Login"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <!-- OTP Verification Activity -->
        <activity
            android:name=".activities.OTPVerification"
            android:parentActivityName=".activities.Login"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <!--  Dashboard Activity  -->
        <activity
            android:name=".activities.Dashboard"
            android:label="@string/title_activity_dashboard"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <!--   Edit Profile Activity     -->
        <activity
            android:name=".activities.EditProfile"
            android:label="@string/title_activity_edit_profile"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>