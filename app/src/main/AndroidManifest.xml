<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="kc.fyp.ecare">
    <!-- PERMISSIONS -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/googleKey" />
        <!-- Splash Activity -->
        <activity
            android:name=".activities.Splash"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Login Activity -->
        <activity
            android:name=".activities.Login"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <!-- Login via Email Activity -->
        <activity
            android:name=".activities.LoginViaEmail"
            android:parentActivityName=".activities.Login"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <!-- Registration Activity -->
        <activity
            android:name=".activities.Registration"
            android:parentActivityName=".activities.Login"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <!-- Forgot Password Activity -->
        <activity
            android:name=".activities.ForgotPassword"
            android:parentActivityName=".activities.Login"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <!-- OTP Verification Activity -->
        <activity
            android:name=".activities.OTPVerification"
            android:parentActivityName=".activities.Login"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <!-- Dashboard Activity -->
        <activity
            android:name=".activities.Dashboard"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <!-- Edit Profile Activity -->
        <activity
            android:name=".activities.EditProfile"
            android:label="@string/title_activity_edit_profile"
            android:parentActivityName=".activities.Dashboard"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <!-- Add New Announcement Activity -->
        <activity
            android:name=".activities.NewAnnouncement"
            android:label="@string/title_activity_new_announcement"
            android:parentActivityName=".activities.Dashboard"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <!-- Add New Product Activity -->
        <activity
            android:name=".activities.NewDonation"
            android:label="@string/title_activity_new_product"
            android:parentActivityName=".activities.Dashboard"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <!-- All Products Activity -->
        <activity
            android:name=".activities.AllDonations"
            android:parentActivityName=".activities.Dashboard"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <!-- All Announcements Activity -->
        <activity
            android:name=".activities.AllAnnouncements"
            android:parentActivityName=".activities.Dashboard"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <!-- Select Address -->
        <activity
            android:name=".activities.SelectAddress"
            android:parentActivityName=".activities.NewDonation"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <!-- Donation Detail Activity -->
        <activity
            android:name=".activities.DonationDetail"
            android:label="@string/title_activity_donation_detail"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <!-- Announcement Detail Activity -->
        <activity
            android:name=".activities.AnnouncementDetail"
            android:label="@string/title_activity_announcement_detail"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <!--    Make a request for Donation    -->
        <activity
            android:name=".activities.MakeRequest"
            android:parentActivityName=".activities.DonationDetail"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".activities.RequestDetail"
            android:label="@string/title_activity_request_detail"
            android:parentActivityName=".activities.Dashboard"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize" />
    </application>

</manifest>