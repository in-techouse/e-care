<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screenBg"
    tools:context=".activities.OTPVerification">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/mp10"
        android:paddingEnd="@dimen/mp10">

        <TextView
            android:id="@+id/enterOtpText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mp25"
            android:layout_marginBottom="@dimen/mp15"
            android:padding="7dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/txt22"
            android:textStyle="bold" />

        <com.chaos.view.PinView
            android:id="@+id/firstPinView"
            style="@style/PinWidget.PinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/mp20"
            android:cursorVisible="true"
            android:inputType="number"
            android:padding="@dimen/mp13"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/txt18"
            android:textStyle="bold"
            app:cursorColor="@color/colorPrimaryDark"
            app:cursorWidth="@dimen/mp3"
            app:hideLineWhenFilled="true"
            app:itemCount="6"
            app:itemHeight="48dp"
            app:itemRadius="4dp"
            app:itemSpacing="0dp"
            app:itemWidth="48dp"
            app:lineColor="@color/colorPrimary"
            app:lineWidth="2dp"
            app:viewType="rectangle" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/mp20"
            android:text="2:00"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/action_resend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/mp20"
            android:padding="@dimen/mp10"
            android:text="@string/action_resend"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/txt16"
            android:textStyle="bold" />

        <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
            android:id="@+id/action_verify_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/mp15"
            android:layout_marginBottom="@dimen/mp15"
            android:background="@drawable/rounded_button"
            android:gravity="center"
            android:text="@string/action_verify_otp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            app:spinning_bar_color="#FFF"
            app:spinning_bar_padding="@dimen/mp7"
            app:spinning_bar_width="@dimen/mp5" />

    </LinearLayout>

</ScrollView>