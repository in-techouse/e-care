<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/mp13"
    android:layout_marginTop="@dimen/mp7"
    android:layout_marginEnd="@dimen/mp13"
    app:cardCornerRadius="@dimen/mp13"
    app:cardElevation="@dimen/mp15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/mp1"
            android:layout_marginTop="@dimen/mp7"
            android:layout_marginBottom="@dimen/mp7"
            android:background="@color/colorPrimaryDark" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mp7"
            android:layout_marginBottom="@dimen/mp7"
            android:padding="@dimen/mp7">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userImage"
                android:layout_width="@dimen/mp96"
                android:layout_height="@dimen/mp96"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/user"
                app:civ_border_color="@color/colorPrimaryDark"
                app:civ_border_width="@dimen/mp3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/userImage"
                android:orientation="vertical"
                android:paddingStart="@dimen/mp5"
                android:paddingEnd="@dimen/mp5">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/userName"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/txt16"
                    android:textStyle="bold" />

                <me.zhanghai.android.materialratingbar.MaterialRatingBar
                    android:id="@+id/ratingBar"
                    style="@style/Widget.MaterialRatingBar.RatingBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/mp10"
                    android:isIndicator="true"
                    android:maxWidth="@dimen/mp45"
                    android:maxHeight="@dimen/mp45"
                    android:minWidth="@dimen/mp45"
                    android:minHeight="@dimen/mp45"
                    android:numStars="5" />

            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/mp1"
            android:layout_marginTop="@dimen/mp7"
            android:layout_marginBottom="@dimen/mp7"
            android:background="@color/colorPrimaryDark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="@dimen/mp7"
            android:text="@string/view_details"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryDark" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/mp1"
            android:layout_marginTop="@dimen/mp7"
            android:layout_marginBottom="@dimen/mp7"
            android:background="@color/colorPrimaryDark" />

    </LinearLayout>

</androidx.cardview.widget.CardView>