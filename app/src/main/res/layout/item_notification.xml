<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/mp13"
    android:layout_marginTop="@dimen/mp7"
    android:layout_marginEnd="@dimen/mp13"
    app:cardCornerRadius="@dimen/mp13"
    app:cardElevation="@dimen/mp15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/mp10"
        android:paddingBottom="@dimen/mp10">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/mp1"
            android:layout_marginTop="@dimen/mp5"
            android:layout_marginBottom="@dimen/mp5"
            android:background="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/mp10"
            android:paddingTop="@dimen/mp7"
            android:paddingEnd="@dimen/mp10"
            android:paddingBottom="@dimen/mp7"
            android:text="@string/message"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/txt14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/mp1"
            android:layout_marginTop="@dimen/mp5"
            android:layout_marginBottom="@dimen/mp5"
            android:background="@color/colorPrimaryDark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingStart="@dimen/mp10"
            android:paddingTop="@dimen/mp7"
            android:paddingEnd="@dimen/mp10"
            android:paddingBottom="@dimen/mp7"
            android:text="@string/view_details"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/txt14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/mp1"
            android:layout_marginTop="@dimen/mp5"
            android:layout_marginBottom="@dimen/mp5"
            android:background="@color/colorPrimaryDark" />

    </LinearLayout>
</androidx.cardview.widget.CardView>